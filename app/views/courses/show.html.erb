<div class="content-box col-centered">
  <h2>
    <%= @course.title %>
    <div class="btn-group pull-right">
      <%= link_to new_course_chapter_path(@course), class: 'btn btn-primary btn-xs' do %>
          <span class="glyphicon glyphicon-plus"></span> New Chapter
      <% end %>
    </div>
  </h2>

  <table class="table">
    <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @course.chapters.each do |chapter| %>
        <tr>
          <td><%= chapter.title %></td>
          <td><%= link_to 'Show', chapter %></td>
          <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
          <td><%= link_to 'Destroy', chapter, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>


  <%= link_to 'Edit', edit_course_path(@course) %> |
  <%= link_to 'Back', courses_path %>
</div>
