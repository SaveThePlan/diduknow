<%= simple_form_for([@chapter, @lesson]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :content, input_html:{class: 'tinymce'} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
<%= tinymce %>
