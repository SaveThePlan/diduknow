<%= simple_form_for([@lesson, @question]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :statement %>

    <%= f.simple_fields_for :answer do |fa| %>
        <%= fa.input :statement %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
