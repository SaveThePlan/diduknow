<div class="content-box col-centered">
  <h2>Chapters</h2>

  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @chapters.each do |chapter| %>
        <tr>
          <td><%= chapter.title %></td>
          <td><%= link_to 'Show', chapter %></td>
          <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
          <td><%= link_to 'Destroy', chapter, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'New Chapter', new_course_chapter_path(@course) %>
</div>
